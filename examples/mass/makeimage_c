#include <stdio.h>

int main(int argc, char** argv) {
    printf("static const uint8 image[] = {\n");
    int c;
    FILE* in = fopen(argv[1], "rb");
    int pos = 0;
    while (-1 != (c=fgetc(in))) {
        if (pos && ! (pos%16))
           printf("\n");
        printf("0x%02X, ", c);
        pos++;
    }
    printf("\n};\n");
}